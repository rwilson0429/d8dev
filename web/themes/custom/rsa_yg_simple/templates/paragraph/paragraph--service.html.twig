<!-- service -->
<div class="fh5co-section">
	<div class="container">
	{% if content.field_style[0]['#markup'] == 1 %}
		<div class="row">
			<div class="col-md-5">
				<h2>{{ content.field_title.0 }}</h2>
				{{ content.field_description.0 }}
				{% if content.field_service_list|render is not empty %}
					<ul class="fh5co-check">
						{{ content.field_service_list }}
					</ul>
				{% endif %}
			</div>
			<div class="col-md-7">
				<img src="{{ file_url(content.field_image['#items'].entity.uri.value) }}" alt="{{ content.field_title.0 }}" class="img-responsive">
			</div>
		</div>
	{% else %}	
		<div class="row">
			<div class="col-md-5 col-md-push-7">
				<h2>{{ content.field_title.0 }}</h2>
				{{ content.field_description.0 }}
				{% if content.field_service_list|render is not empty %}
					<ul class="fh5co-check">
						{{ content.field_service_list }}
					</ul>
				{% endif %}
			</div>
			<div class="col-md-7 col-md-pull-5">
				<img src="{{ file_url(content.field_image['#items'].entity.uri.value) }}" alt="Free {{ content.field_title.0 }}" class="img-responsive">
			</div>
		</div>
	{% endif %}
	</div>
</div>

